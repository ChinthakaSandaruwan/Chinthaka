{
    "name": "rentfinder/sl",
    "description": "RentFinder SL - Rental Property Management System for Sri Lanka",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "RentFinder SL Team",
            "email": "dev@rentfinder.lk"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "RentFinder\\": "src/",
            "RentFinder\\Config\\": "config/",
            "RentFinder\\Tests\\": "tests/"
        },
        "files": [
            "includes/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "RentFinder\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-unit": "phpunit tests/unit",
        "test-integration": "phpunit tests/integration",
        "test-functional": "phpunit tests/functional",
        "cs-check": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/",
        "stan": "phpstan analyse src/",
        "setup": [
            "@composer install",
            "@php setup_database.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}